<% layout("/layouts/boilerplate") %>

<div class="container ms-5 mt-5">
  <form
    class="edit-btn-form needs-validation"
    action="/post/show/<%= post._id %>/edit?_method=PUT"
    method="POST"
    enctype="multipart/form-data"
    novalidate
  >
    <div class="mb-3">
      <label for="image" class="form-label">Add Image:</label>
      <input
        type="file"
        class="form-control"
        id="image"
        name="image"
        aria-describedby="emailHelp"
      />
    </div>

    <div class="form-group">
      <textarea
        name="description"
        id="description"
        class="form-control"
        cols="30"
        rows="5"
        required
      ></textarea>
      <div class="valid-feedback">Looks good!</div>
      <div class="invalid-feedback">Please provide a description.</div>
    </div>

    <div class="mt-3">
      <button type="submit" class="btn btn-primary edit-btn">Edit Post</button>
    </div>
  </form>

  <div class="mt-3">
    <form
      action="/post/show/<%= post._id %>/delete?_method=DELETE"
      method="POST"
    >
      <button class="btn btn-danger">Delete Post</button>
    </form>
  </div>
</div>
